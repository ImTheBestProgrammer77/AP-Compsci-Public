package com.mycompany.relationships;

import java.util.*;

/**
 *
 * @author AMoylan2026
 */
public class Relationships {

    public static void main(String[] args) {
    
        Scanner scan =new Scanner(System.in);
        

      
        
        String another = "y";
        ArrayList ToDoList = new ArrayList();
        int i = 1;
        
        while (another.equalsIgnoreCase("y")){
        
            Task task1 = new Task();
            
        System.out.println("task in:");
        task1.setTask(scan.next());
        
        System.out.println("Add Priority:");
        task1.setPriority(scan.nextInt());
        
        System.out.println("Add Complexity:");
        task1.setComplexity(scan.nextInt());
        
        ToDoList.add(task1);
        System.out.println("Would you like to add another? (y/n)");
        another = scan.next();
        
        }
        
        System.out.println(ToDoList);
                
    }
    
    
    
    
}

interface Priority{
    public void setPriority(int priority);
    public int getPriority();
    //write if and statement 1-10 ranking urgency
}

interface Complexity{
    public void setComplexity(int complexity);
    public int getComplexity();
    //write if and statement 1-10 ranking urgency
}

class Task implements Priority, Complexity, Comparable<Task>{
    
    private String toDo = "";
    private int priority = 0;
    private int complexity = 0;
    
    public Task (String inToDo){
        toDo = inToDo;
        
    }
    
    public Task (){
        toDo = "";
        
    }
    
    public void setTask(String t){
        toDo = t;
    }
    
    public int getPriority(){
        return priority;
    }
    
    public void setPriority(int inP){
        priority = inP;
        
    }
    
    public int getComplexity(){
        return complexity;
    }
    
    public void setComplexity(int inC){
        complexity = inC;
        
    }
    
    public int compareTo(Task otherTask){
        return Integer.compare(this.priority, otherTask.getPriority());
    }
    
    
    //toString

@Override    
    public String toString(){
        String myString = "Task:" + toDo + " Priority:" + priority + " Complexity:" + complexity;
        
        return myString;
    }
    
  
}
